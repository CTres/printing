<body id='graybg'>
	<div class="container">
		<div class="row">
			<div class="span4 offset4 form-user">
					<h3 class="heading"> Log in</h3>
					<hr>
					<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				 	  <%= f.error_notification %>
				  	<div class="form-inputs">
				   	 <%= f.input :email, autofocus: true, required: true, label: false, placeholder: 'Email' %>
				   	 <%= f.input :password, required: true, label: false, placeholder: 'Password' %>
				   	 <%= f.button :submit, "Sign in", class: 'btn.btn-large btn-primary', id: 'create_btn'%>
				  	</div>
					<% end %>
					<hr>
					<%= render 'devise/shared/forgot' %>
			</div>
		</div>
	</div>
</body>


