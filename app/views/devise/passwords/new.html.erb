<div id='graybg'>
	<div class="container">
		<div class="row">
			<div class="span4 offset4 form-user">
					<h3 class="heading"> Reset My Password</h3>
					<hr>
					<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post } ) do |f| %>
				 	  <%= f.error_notification %>
				  	<div class="form-inputs">
				   	 <%= f.input :email, autofocus: true, required: true, label: false, placeholder: 'Email' %>
				   	 <%= f.button :submit, "Send me reset instructions", class: 'btn.btn-large btn-primary', id: 'create_btn'%>
				  	</div>
					<% end %>
					<hr>
			</div>
		</div>
	</div>
</div>

